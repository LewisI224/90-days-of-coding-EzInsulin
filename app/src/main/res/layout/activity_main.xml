<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/IR_Text_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insulin_ratio_label"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Explanation of Insulin Ratio"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/IR_Number_Input"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="Insulin Ratio"
                android:inputType="numberDecimal"
                android:text="10"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/IR_Units"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/unit_grams" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/CHO_Text_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carbohydrates_label"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Explanation of Carbohydrate"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/CHO_Number_Input"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="Carbohydrates"
                android:inputType="number"
                android:text="100"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CHO_Units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_grams" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currBSLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_blood_glucose_label"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Explanation of Current Blood Glucose"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/currBS"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="Current Blood Glucose"
                android:inputType="numberDecimal"
                android:text="5.5" />

            <TextView
                android:id="@+id/currBS_Units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_mmol_l" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tarBSLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_blood_glucose_label"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Explanation of Target Blood Glucose"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/tarBS"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="Current Blood Glucose"
                android:inputType="numberDecimal"
                android:text="5.5" />

            <TextView
                android:id="@+id/tarBS_Units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_mmol_l" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/CFLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correction_factor_label"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Explanation of Correction Factor"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/CF"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:hint="Correction Factor"
                android:inputType="numberDecimal"
                android:text="3" />

            <TextView
                android:id="@+id/CF_Units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_mmol_l" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/Calculate_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/calculate_button_text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversionLayout" />

    <LinearLayout
        android:id="@+id/conversionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_mmol_l" />

        <Switch
            android:id="@+id/conversionSwitch"
            android:contentDescription="Conversion Switch"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_mg_dl" />
    </LinearLayout>

    <TextView
        android:id="@+id/Insulin_Dose_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dose_header"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calculate_Button" />

    <TextView
        android:id="@+id/Units_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Insulin_Dose_Label" />

</androidx.constraintlayout.widget.ConstraintLayout>